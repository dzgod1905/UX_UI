<!--                    android:id="@+id/favorite_icon"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="4dp"-->
<!--                    android:src="@drawable/baseline_favorite_border_24"-->
