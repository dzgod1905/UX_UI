<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintHorizontal_bias="0.902"-->
<!--                    app:layout_constraintStart_toStartOf="parent" />-->





            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/buy_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Buy Now"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/order_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Order"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/sell_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Sell On Market"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/auction_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Auction"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Set Price: "
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_price_item"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ETH"
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Date End: "
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_date_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DD/MM/YY"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/sell_auth_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Sell"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Order Price: "
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_order_price_item"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ETH"
                        android:textSize="20dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:id="@+id/order_auth_button"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:text="Order"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>







    <include layout="@layout/bottom_navigation">
    </include>

</LinearLayout>